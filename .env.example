# Database Configuration
DATABASE_URL=mysql+pymysql://qpeptide_user:qpeptide_password@mysql:3306/qpeptide-db

# Database query echo (set to true for SQL query logging in development)
DATABASE_ECHO=false

# These are used by the entrypoint script to create database and grant permissions
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_USER=qpeptide_user
DB_NAME=qpeptide-db

# API version prefix for all API routes
API_V1_PREFIX=/api/v1

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Environment
ENVIRONMENT=development

# Host to bind to (0.0.0.0 for containerized deployments)
HOST=0.0.0.0

# Port to listen on
PORT=8000

# AWS Secrets Manager (for production deployments)
AWS_SECRET_NAME=qpeptide-cutter-backend/secrets
AWS_REGION=us-east-2

# Digest Job limits per user
DIGEST_JOB_LIMIT=3
DIGEST_JOB_INTERVAL=2 # in minutes

# Peptide Filter Settings
MIN_PEPTIDE_LENGTH=7
MAX_PEPTIDE_LENGTH=30
