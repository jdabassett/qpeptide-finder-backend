# Database Configuration
DATABASE_URL=mysql+pymysql://qpeptide_user:qpeptide_password@mysql:3306/qpeptide_cutter

# Database query echo (set to true for SQL query logging in development)
DATABASE_ECHO=false

# API version prefix for all API routes
API_V1_PREFIX=/api/v1

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000

# Environment
ENVIRONMENT=development

# Host to bind to (0.0.0.0 for containerized deployments)
HOST=0.0.0.0

# Port to listen on
PORT=8000

# AWS Secrets Manager (for production deployments)
AWS_SECRET_NAME=qpeptide-cutter-backend/secrets
AWS_REGION=us-east-2
